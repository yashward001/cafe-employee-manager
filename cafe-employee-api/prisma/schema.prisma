generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["debian-openssl-3.0.x", "native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cafe {
  id          String     @id @default(uuid())
  name        String
  description String
  logo        String?
  location    String

  // One-to-many: a cafe has many employees
  employees   Employee[]
}

model Employee {
  id           String   @id @default(uuid())
  empCode      String   @unique
  name         String
  email        String   @unique
  phoneNumber  String
  gender       String   // "Male" | "Female"
  startDate    DateTime?
  cafeId       String?
  cafe         Cafe?    @relation(fields: [cafeId], references: [id], onDelete: Cascade)
}